<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pooa20181.iff.edu.br.trabalho0320181">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".model.DBConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ListaOficina"
            android:label="@string/title_activity_lista_oficina"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.OficinaDetalhe"
            android:label="@string/title_activity_oficina_detalhe" />
        <activity
            android:name=".activity.ListaMecanico"
            android:label="@string/title_activity_lista_mecanico"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.MecanicoDetalhe"
            android:label="@string/title_activity_mecanico_detalhe"/>

    </application>

</manifest>